source 'https://rubygems.org'
ruby "2.2.4"

# Cuba is a microframework for web applications
gem 'cuba', '~> 3.4.0'

# HTTP server
gem 'puma', '~> 2.11.3'

# A Ruby client that tries to match Redis' API one-to-one
gem 'redis', '~> 3.2.1'

# This is a JSON implementation as a Ruby extension in C
gem 'json', '~> 1.8.3'

# Generic connection pool for Ruby
gem 'connection_pool', '~> 2.2.0'

# Rake is a Make-like program implemented in Ruby
gem 'rake', '~> 10.4.2'

group :test do
  gem 'minitest', '~> 5.7.0'
  gem 'rack-test', '~> 0.6.3'
end

group :development do
  gem 'pry'
end
